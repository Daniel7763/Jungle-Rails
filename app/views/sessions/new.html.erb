<h1>Sign In</h1>

<%= form_with(model: @user, url: sessions_path) do |form| %>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email, name: 'session[email]' %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password, name: 'session[password]' %>
  </div>
  
  <div>
    <%= form.submit 'Sign In' %>
  </div>

<% end %>
